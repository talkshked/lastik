// Helper function to calculate the area of a circle
function calculateCircleArea(radius) {
  return Math.PI * radius ** 2;
}

// Helper function to check if a string is a palindrome
function isPalindrome(str) {
  const reversedStr = str.split('').reverse().join('');
  return str === reversedStr;
}

// Helper function to generate a random integer between min and max (inclusive)
function generateRandomInteger(min, max) {
  return Math.floor(Math.random() * (max - min + 1)) + min;
}

// Function to check if a number is a perfect square
function isPerfectSquare(number) {
  return Math.sqrt(number) % 1 === 0;
}

// Example usage
const circleRadius = 5;
console.log(`Area of a circle with radius ${circleRadius} is:`, calculateCircleArea(circleRadius).toFixed(2));

const palindromeString = "racecar";
console.log(`"${palindromeString}" is a palindrome:`, isPalindrome(palindromeString));

const minRandomInt = 1;
const maxRandomInt = 100;
console.log(`Random integer between ${minRandomInt} and ${maxRandomInt} is:`, generateRandomInteger(minRandomInt, maxRandomInt));

const perfectSquareNumber = 16;
console.log(`${perfectSquareNumber} is a perfect square:`, isPerfectSquare(perfectSquareNumber));
